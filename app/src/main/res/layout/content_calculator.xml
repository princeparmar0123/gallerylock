<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/bar_numeric"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.6"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_25sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clear_btn"
                        style="@style/calculator_button_gray"
                        android:text="AC"
                         />

                    <TextView
                        android:id="@+id/plus_minus"
                        style="@style/calculator_button_gray"
                        android:text="+/\u2212"
                         />

                    <TextView
                        android:id="@+id/persantage_btn"
                        style="@style/calculator_button_gray"
                        android:text="%"
                         />

                    <TextView
                        android:id="@+id/divide_btn"
                        style="@style/calculator_button_blue"
                        android:text="รท"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number7_btn"
                        style="@style/calculator_button"
                        android:text="7" />

                    <TextView
                        android:id="@+id/number8_btn"
                        style="@style/calculator_button"
                        android:text="8" />

                    <TextView
                        android:id="@+id/number9_btn"
                        style="@style/calculator_button"
                        android:text="9" />

                    <TextView
                        android:id="@+id/multiply_btn"
                        style="@style/calculator_button_blue"
                        android:text="ร"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/number4_btn"
                        style="@style/calculator_button"
                        android:text="4" />

                    <TextView

                        android:id="@+id/number5_btn"
                        style="@style/calculator_button"
                        android:text="5" />

                    <TextView

                        android:id="@+id/number6_btn"
                        style="@style/calculator_button"
                        android:text="6" />

                    <TextView
                        android:id="@+id/minus_btn"
                        style="@style/calculator_button_blue"
                        android:text="\u2212"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/number1_btn"
                        style="@style/calculator_button"
                        android:text="1" />

                    <TextView

                        android:id="@+id/number2_btn"
                        style="@style/calculator_button"
                        android:text="2" />

                    <TextView

                        android:id="@+id/number3_btn"
                        style="@style/calculator_button"
                        android:text="3" />

                    <TextView
                        android:id="@+id/plus_btn"
                        style="@style/calculator_button_blue"
                        android:text="\u002B"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:id="@+id/number0_btn"
                        style="@style/calculator_button_black"
                        android:layout_weight="2"
                        android:text="0" />

                    <TextView
                        android:id="@+id/dot_btn"
                        style="@style/calculator_button"
                        android:text="." />


                    <!-- <Button
                         android:id="@+id/parentheses_btn"
                         style="@style/calculator_button"
                         android:text="( )" />-->

                    <TextView
                        android:id="@+id/equal_btn"
                        style="@style/calculator_button_blue"
                        android:text="="
                        android:textColor="@color/White" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>

